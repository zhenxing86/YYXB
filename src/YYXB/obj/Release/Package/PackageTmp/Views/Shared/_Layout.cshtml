<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>运营管理后台</title>

    <script src="../Scripts/jquery-1.9.1.min.js"></script>

    <!-- Bootstrap -->
    <link href="../Content/bootstrap.css?v=1" rel="stylesheet" />
    <link href="../Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="../Content/style/common.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="http://cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body style="background-color: #e7e8eb;">
    @{
        int UserType = ViewBag.UserType;
    }
    <header class="navbar-default" style="border-bottom: 4px solid #a9ce51; background-color: #fff; background-image: none;" role="navigation">
        <div class="navbar-toggle" style="padding: 0; margin: 0;" data-toggle="collapse">
        </div>
        <div class="container" style="height:90px;">
            <div class="collapse navbar-collapse">
                <div class="navbar-header">
                    <span class="navbar-brand" style="height:30px; line-height:30px; padding-top:40px;font-size:60px;color:blue;">运营管理后台</span>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="\" style="font-size: 20px; line-height: 80px;">退出</a></li>
                </ul>
            </div>
        </div>
    </header>
    <nav class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                data-target="#example-navbar-collapse">
                <span class="sr-only">切换导航</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="container">
            <div class="collapse navbar-collapse" id="example-navbar-collapse">
                <ul class="nav navbar-nav">
                    @if(UserType>0)
                    {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">设置<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/WebDomain/Index">域名配置</a></li>
                            <li class="divider"></li>
                            <li><a href="/Channel/Index">渠道配置</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">用户管理<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/User/Index">用户管理</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">视频管理<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Category/Index">视频分类</a></li>
                            <li class="divider"></li>
                            <li><a href="/Movice/Index">视频资源</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">订单<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/OrderList/Index">订单查询</a></li>
                        </ul>
                    </li>
                    }
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">报表中心<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Report/UserPay">用户激活/支付报表</a></li>
                        </ul>
                    </li>
                    @if(UserType>0)
                    {
                    <li class="">
                        <a href="/Feedback/Index">意见反馈</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
</body>
</html>
